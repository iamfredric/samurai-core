{
    "name": "iamfredric/boil",

    "autoload": {
        "files": [
            "src/helpers.php"
        ],
        "psr-4": {
            "Boil\\": "src/"
        }
    },

    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },

    "require": {
        "php": "^8.0|^8.1",
        "illuminate/view": "^10.13",
        "illuminate/contracts": "^10.13",
        "illuminate/config": "^10.17",
        "illuminate/http": "^10.17",
        "spatie/ignition": "^1.9"
    },
    "require-dev": {
        "laravel/pint": "^1.11",
        "mockery/mockery": "^1.6",
        "pestphp/pest": "^2.13",
        "php-mock/php-mock-phpunit": "^2.7",
        "phpstan/phpstan": "^1.10",
        "rector/rector": "^0.18.0",
        "spatie/invade": "^2.0"
    },
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "refacto": "rector",
        "lint": "pint",
        "test:refacto": "rector --dry-run",
        "test:lint": "pint --test",
        "test:types": "phpstan analyse --ansi",
        "test:unit": "pest --colors=always",
        "test": [
            "@test:lint",
            "@test:types",
            "@test:unit"
        ]
    }
}
