{
    "name": "iamfredric/boil",

    "autoload": {
        "files": [
            "src/helpers.php"
        ],
        "psr-4": {
            "Boil\\": "src/"
        }
    },

    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },

    "require": {
        "php": "^8.0|^8.1",
        "illuminate/view": "^10.13",
        "illuminate/contracts": "^10.13",
        "illuminate/config": "^10.17",
        "illuminate/http": "^10.17",
        "spatie/ignition": "^1.9"
    },
    "require-dev": {
        "pestphp/pest": "^2.13",
        "mockery/mockery": "^1.6",
        "php-mock/php-mock-phpunit": "^2.7",
        "spatie/invade": "^2.0"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
